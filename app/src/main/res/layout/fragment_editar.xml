<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CadastraFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ming"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="114dp"
            android:layout_marginStart="@dimen/linearImg"
            android:layout_marginLeft="@dimen/linearImg"
            android:layout_marginTop="@dimen/ItemExibeTopOne"
            app:srcCompat="@drawable/users_icon" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="400dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/ferramenta_icon" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nomeUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:boxBackgroundColor="@null"
            app:counterEnabled="true"
            app:counterMaxLength="40"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextnomeUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ming"
                android:hint="Nome"
                android:inputType="textPersonName"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/enderecoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:boxBackgroundColor="@null"
            app:counterEnabled="true"
            app:counterMaxLength="80"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextEnderecoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ming"
                android:hint="Endereço"
                android:inputType="textPostalAddress"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dataNascUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:boxBackgroundColor="@null"
            app:counterEnabled="true"
            app:counterMaxLength="11"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextdataNascUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ming"
                android:hint="Data de Nascimento"
                android:inputType="date"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/generoUsuario"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/linearContent"
            android:layout_marginLeft="@dimen/linearContent"
            android:text="@string/Gênero"
            android:textColor="#FF000000" />

        <Spinner
            android:id="@+id/spinnerGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/linearContent"
            android:layout_marginLeft="@dimen/linearContent"
            android:background="@color/ming"
            android:entries="@array/itensSpinner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.039" />

        <Button
            android:id="@+id/btnEditarUsuario"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/linearContent"
            android:layout_marginStart="@dimen/linearContent"
            android:layout_marginLeft="@dimen/linearContent"
            android:layout_marginTop="@dimen/linearContent"
            android:layout_marginEnd="@dimen/linearContent"
            android:layout_marginRight="@dimen/linearContent"
            android:layout_marginBottom="@dimen/linearContent"
            android:background="@color/laurel_green"
            android:text="@string/btnEditarUsuario"
            android:textColor="@color/white"
            android:textColorHighlight="#000000"
            android:textColorLink="#000000"
            app:backgroundTint="@color/polished_pine" />

    </LinearLayout>

</FrameLayout>